#:kivy 1.8.0

BoxLayout:
    orientation: 'vertical'
    RelativeLayout:
        size_hint: (1, .9)
        id: answer_layout
    BoxLayout:
        id: extra_layout
        size_hint: (1, .1)
        orientation: 'horizontal'
        Label:
            id: message
            size_hint: (.8, 1)
            text: ""

<MoveableDigit>:
    do_rotation: False
    do_scale: False
    size: digit.size
    size_hint: None, None
    Label:
        id: digit
        pos_hint: None, None
        size_hint: None, None
        text_size: self.size
        text: self.parent.text
        color: self.parent.color
        font_size: self.parent.font_size

<HintDigit>:
    text_size: self.size
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

