#:kivy 1.8.0

BoxLayout:
    orientation: 'vertical'
    RelativeLayout:
        size_hint: (1, .9)
        id: answer_layout
    BoxLayout:
        id: extra_layout
        size_hint: (1, .1)
        orientation: 'horizontal'
        Label:
            id: message
            size_hint: (.8, 1)
            text: ""

<MoveableDigit>:
    do_rotation: False
    do_scale: False
    size: digit.size
    size_hint: None, None
    Label:
        pos_hint: 0, 0 
        size_hint: None, None
        id: digit
        text_size: self.size