#:kivy 1.8.0

BoxLayout:
    orientation: 'vertical'
    RelativeLayout:
        size_hint: (1, .9)
        id: answer_layout
    BoxLayout:
        id: extra_layout
        size_hint: (1, .1)
        orientation: 'horizontal'
        Label:
            id: message
            size_hint: (.8, 1)
            text: app.DO_SETUP_MESSAGE

<MoveableDigit>:
    do_rotation: False
    do_scale: False
    size: digit.width + 3, digit.height
    size_hint: None, None
    Label:
        id: digit
        size: self.texture_size
        text: self.parent.text
        color: self.parent.color
        font_size: self.parent.font_size

<AnswerBox>:
    canvas.after:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

